      <!-- end create zipfile plugin -->
      <!-- begin create self-extracting installer plugin -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <id>create-single-installer</id>
	    <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
	    <configuration>
	    <executable>bash</executable>
	    <arguments>
		<argument>makebin-auto.sh</argument>
		<argument>${makeself.directory}</argument>
	    </arguments>
	    </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- end create self-extracting installer plugin -->
      <!-- begin deploy installers to repository -->
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
        </plugin>
      <!-- end deploy installers to repository -->
    </plugins>

<pluginManagement>
    <plugins>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <version>1.5</version>
            <executions>
                <execution>
                    <id>attach-artifacts</id>
                    <phase>package</phase>
                    <goals>
                        <goal>attach-artifact</goal>
                    </goals>
                    <configuration>
                        <artifacts>
                            <artifact>
                                <file>${project.build.directory}/${project.artifactId}-${project.version}.bin</file>
                                <type>bin</type>
				<!-- this is the single self-extracting installer -->
                            </artifact>
                        </artifacts>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
</pluginManagement>
  
  
  </build>
      </profile>
  </profiles>

</project>
